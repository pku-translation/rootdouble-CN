  "001115": {
    "context": "001115",
    "code": "0x45",
    "developer_comment": "恵那",
    "string": "「この部屋は……『資料室』？」"
  },
  "001120": {
    "context": "001120",
    "code": "0x45",
    "developer_comment": "",
    "string": "プレートには、確かにそう書いてあった。"
  },
  "001131": {
    "context": "001131",
    "code": "0x45",
    "developer_comment": "渡瀬",
    "string": "「あるいは、この部屋に脱出のヒントが……？」"
  },
  "001160": {
    "context": "001160",
    "code": "0x45",
    "developer_comment": "恵那",
    "string": "「あるかもしれないわね。入ってみましょう、隊長さん」"
  },
  "001193": {
    "context": "001193",
    "code": "0x45",
    "developer_comment": "",
    "string": "そう言うや、恵那は資料室のドアを開けた。"
  },
  "001266": {
    "context": "001266",
    "code": "0x45",
    "developer_comment": "",
    "string": "@import 0076 000463"
  },
  "001271": {
    "context": "001271",
    "code": "0x45",
    "developer_comment": "",
    "string": "@import 0076 000468"
  },
  "001276": {
